{
  "id": null,
  "uid": "cloud-resource-monitoring-dashboard",
  "title": "Cloud Resource Monitoring Dashboard",
  "tags": ["cloud", "monitoring", "metrics", "alerting"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Utilization (%)",
      "datasource": "CloudWatch",
      "targets": [
        {
          "namespace": "AWS/EC2",
          "metricName": "CPUUtilization",
          "dimensions": {
            "InstanceId": "${instance_id}"
          },
          "statistics": ["Average"],
          "period": "",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "graph",
      "title": "Memory Utilization (%)",
